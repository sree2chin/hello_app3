<% if logged_in? %>
  
  <div class="row">
    <aside class="col-md-3 watslifeLeftBox">
      
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <div class = "row">
        
        <%= form_for(@micropost, url: filter_path) do |f| %>
          <div class = "col-md-12">
            <select name="micropost[location]" 
                    id="micropost_location"
                    class = "form-control">
              <option value="karnataka">Karnataka</option>
              <option value="andhraPradesh">Andhra Pradesh</option>
              <option value="others">others</option>
            </select>
          </div>
          <div class = "col-md-12">
            <select name="micropost[typeofpost]" 
                    id="micropost_typeofpost"
                    class = "form-control">
              <option value="oldageHomes">Oldage Homes</option>
              <option value="orphanage">Orphanage</option>
              <option value="others">others</option>
            </select>
            <% #f.select :typeofpost, options_for_select([["Oldage Homes", "oldageHomes"], ["Orphanage", "orphanage"], ["others", "others"]]), class: "form-control"%>
          </div>
          <div class = "col-md-12">
            <%= f.submit "Filter", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
      </section>
    
    </aside>

    <div class="col-md-7">
      <div class = "row">
        <section class="micropost_form">
          <%= render 'shared/micropost_form' %>
        </section>
      </div>
      
      <h3>Posts</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
  <div class="row">
    <aside class="col-md-3">
      <section class="user_info">
        Categories
      </section>
      <section class="micropost_form">
        Please log in to post <li><%= link_to "Log in", login_path %></li>
      </section>
    </aside>
    <div class="col-md-7">
     
      <h3>Posts</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% end %>
